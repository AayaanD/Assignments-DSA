#include<iostream>
using namespace std;
void createArray(int arr[],int &n)
{
 cout << "Enter number of elements: ";
    cin >> n;
    cout << "Enter elements: ";
    for (int i = 0; i < n; i++) {
        cin >> arr[i];
    }
}
void displayArray(int arr[], int n) {
    if (n == 0) { cout << "Array is empty.\n"; return; }
    cout << "Array elements: ";
    for (int i = 0; i < n; i++) {
        cout << arr[i] << " ";
    }
    cout << endl;
}
void insertElement(int arr[],int &n)
{
    int pos,value;
    cout<<"Enter position \n";
    cin>>pos;
    cout<<"Enter value \n";
    cin>>value;
    for(int i=n-1;i>=pos-1;i--)
    {
        arr[i+1]=arr[i];
    }
    
    arr[pos-1]=value;
    n++;
}
void deleteElement(int arr[],int &n)
{
    int pos;
    cout<<"Enter position \n";
    cin>>pos;
    for(int i=pos-1;i<n;i++)
    {
        arr[i]=arr[i+1];
    }
    n--;
}
void linearSearch(int arr[], int n) {
    int key;
    cout << "Enter element to search: ";
    cin >> key;
    bool found = false;
    for (int i = 0; i < n; i++) {
        if (arr[i] == key) {
            cout << "Element found at position " << i + 1 << ".\n";
            found = true;
        }
    }
    if (!found) cout << "Element not found.\n";
}

int main()
{
    int n = 0, choice;

    cout << "Enter maximum number of elements for this program: ";
    int maxSize;
    cin >> maxSize;
    int arr[maxSize]; 
    while (true) {
        cout << "\n——MENU——\n";
        cout << "1. CREATE\n";
        cout << "2. DISPLAY\n";
        cout << "3. INSERT\n";
        cout << "4. DELETE\n";
        cout << "5. LINEAR SEARCH\n";
        cout << "6. EXIT\n";
        cout << "Enter your choice: ";
        cin >> choice;

        switch (choice) {
            case 1: createArray(arr, n); break;
            case 2: displayArray(arr, n); break;
            case 3: insertElement(arr, n); break;
            case 4: deleteElement(arr, n); break;
            case 5: linearSearch(arr, n); break;
            case 6: cout << "Exiting...\n"; return 0;
            default: cout << "Invalid choice.\n";
        }
    }
    return 0;
}
